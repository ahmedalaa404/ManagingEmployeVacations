@model DepartmentVm

<div class="container p-5">


    <form asp-action="Delete" method="post" asp-controller="Department">

        <div class="form-group" hidden>
            <label for="id">Name</label>
            <input class="form-control" asp-for="Id"  hidden>
        </div>


        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" asp-for="Name" readonly>
            <span asp-validation-for="Name"></span>
        </div>


        <div class="form-group">
            <label for="Description">Description</label>
            <input class="form-control" asp-for="Description" readonly>
            <span asp-validation-for="Description"></span>
        </div>






        <button class="btn btn-success" type="submit">Delete</button>
        <button class="btn btn-danger" asp-action="Index">Back </button>



    </form>
</div>