
@model RequestVacationVm



  @inject IRepository<Employee> Employee;
  @inject IRepository<VacationType> Type;



<div class="container p-4" >
    <div class="row">
        @{

            var Employees = Employee.GetAll();
            var Types = Type.GetAll();
        }
        <div class="col-md-12">
            <form asp-action="Delete">
                <div asp-validation-summary="All"></div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">

                    <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(Employees,"Id","Name"))" readonly="readonly">

                    </select>
                </div>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                <div class="form-group row">
                    <div class="form-group col-md-6">
                        <label asp-for="StartDateVacations" class="control-label"></label>
                        <input asp-for="StartDateVacations" class="form-control" type="date" readonly="readonly" />
                        <span asp-validation-for="StartDateVacations" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="EndDateVacations" class="control-label"></label>
                        <input asp-for="EndDateVacations" class="form-control" type="date" readonly="readonly" />
                        <span asp-validation-for="EndDateVacations" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group w-50">
                    <label asp-for="VacationTypeId" class="control-label"></label>
                    <select asp-for="VacationTypeId" class="form-control" asp-items="@(new SelectList(Types,"Id","Name"))" readonly="readonly">


                    </select>
                    <span asp-validation-for="VacationTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <textarea asp-for="Comment" class="form-control" readonly="readonly"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Approved" class="control-label"></label>
                    <input asp-for="Approved" class="form-control" type="checkbox" readonly onclick="return false;"/>
                </div>



                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>|
                    <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                </div>


            </form>
        </div>
    </div>
</div>


