@model VacationTypeVm

<div class="container p-5">


    <form asp-action="Delete" method="post" asp-controller="VacationType">
        <div asp-validation-summary="All" class="alert"></div>
        <div class="form-group" hidden>
            <label for="id">Name</label>
            <input class="form-control" asp-for="Id"  hidden>
        </div>


        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" asp-for="Name" readonly>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label for="Background_Color">Background_Color</label>
            <input class="form-control p-0" type="color" asp-for="Background_Color" readonly>
        </div>


        <div class="form-group">
            <label for="NumberDays">NumberDays</label>
            <input class="form-control" asp-for="NumberDays" readonly>
            <span asp-validation-for="NumberDays"></span>
        </div>






        <button class="btn btn-success" type="submit">Delete</button>
        <button class="btn btn-danger" asp-action="Index">Back </button>



    </form>
</div>