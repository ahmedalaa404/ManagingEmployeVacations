@model VacationTypeVm


<div class="container p-4">




    <form asp-action="Create" method="post" asp-controller="VacationType">

        <div asp-validation-summary="All" class="alert"></div>
        <div class="form-group" hidden>
            <input class="form-control" asp-for="@Model.Id">
        </div>


        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>



        <div class="form-group">
            <label for="Background_Color">Background_Color</label>
            <input class="form-control p-0"  type="color" asp-for="Background_Color">
        </div>

        <div class="form-group">
            <label for="NumberDays">NumberDays</label>
            <input class="form-control" asp-for="NumberDays">
            <span asp-validation-for="NumberDays"></span>
        </div>



        <button class="btn btn-success" type="submit">Create</button>
        <a class ="btn btn-danger" asp-action="Index">Back </a>
    </form>

</div>